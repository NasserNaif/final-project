// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}


model User {
  id String @id @default(uuid())
  username String @unique
  name String 
  email String @unique
  phoneNumber String @unique
  password String 
  commercialRecord String @unique
  role Role 
}

enum Role {
  PROVIDER 
  CLIENT 
}


model Provider {
  id String @id @default(uuid())
  username String @unique
  name String 
  email String @unique 
  phoneNumber String @unique
  password String 
  commercialRecord String @unique
  request Request[]
  projects Project[]
}

model Client {
  id String @id @default(uuid())
  username String @unique
  name String 
  email String @unique 
  phoneNumber String @unique
  password String 
  commercialRecord String @unique
  prjects Project[]
}

model Project {
  id String @id @default(uuid())
  projectName String 
  projectDiscription String 
  projectDuration String
  publishDate DateTime @default(now())

  request Request[]
  client_id String
  clientID Client @relation(fields: [client_id],references: [id])
  provider_id String
  providerID Provider @relation(fields: [provider_id],references: [id])
}

model Request {
  id String @id @default(uuid())
  name String 
  discription String
  budget Int
  attachment String?
  project_id String
  project Project @relation(fields: [project_id],references: [id])
  provider_id String
  providerID Provider @relation(fields: [provider_id],references: [id])
}