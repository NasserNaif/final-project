generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id               String     @id @default(uuid())
  username         String     @unique
  name             String
  email            String     @unique
  phoneNumber      String     @unique
  password         String
  commercialRecord String     @unique
  role             Role
  profile          Profile?
  project          Project[]

  request          Requests[]
}

model Profile {
  id       String  @id @default(uuid())
  user_id  String  @unique
  summary  String
  attament String?
  userID   User    @relation(fields: [user_id], references: [id])
}

model Project {
  id                  String     @id @default(uuid())
  projectName         String
  projectDiscription  String
  deadLine            String
  deadLineOpningOffer String
  isCompleted         Boolean    @default(false)
  companyName         String ?
  user_id             String
  userID              User?      @relation(fields: [user_id], references: [id])
  request             Requests[]
}

model Requests {
  id                 String  @id @default(uuid())
  requestName        String
  requestDiscription String
  requestBudget      Int
  isAproved          Boolean @default(false)
  requestAttachment  String?
  project_id         String
  user_id            String
  project            Project @relation(fields: [project_id], references: [id])
  userID             User    @relation(fields: [user_id], references: [id])
}

enum Role {
  PROVIDER
  CLIENT
}
